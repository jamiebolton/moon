<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration
        PUBLIC "-//ibatis.apache.org//DTD Config 3.0//EN"
        "http://ibatis.apache.org/dtd/ibatis-3-config.dtd">

<configuration>
    <settings>
        <setting name="cacheEnabled" value="false"/>
        <setting name="lazyLoadingEnabled" value="false"/>
        <setting name="aggressiveLazyLoading" value="true"/>
        <setting name="logImpl" value="SLF4J"/>
    </settings>

    <!-- 进行mybatis 配置 -->
    <typeAliases>
        <!-- 为类型 起了别名 -->
        <typeAlias type="club.crazypenguin.commons.utils.PageInfo" alias="PageInfo"/>

        <typeAlias type="club.crazypenguin.model.User" alias="User"/>
        <typeAlias type="club.crazypenguin.commons.result.UserVo" alias="UserVo"/>

        <typeAlias type="club.crazypenguin.model.Resource" alias="Resource"/>
        <typeAlias type="club.crazypenguin.model.Role" alias="Role"/>
        <typeAlias type="club.crazypenguin.model.Organization" alias="Organization"/>
        <typeAlias type="club.crazypenguin.model.SysLog" alias="SysLog"/>
    </typeAliases>

